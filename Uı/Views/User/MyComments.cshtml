@model List<ResultCommentViewModel>
@{
    Layout = null;
    int count = 0;
}
<style>
    #yorum {
        border-collapse: collapse;
        width: 100%;
    }

        #yorum td, #yorum th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        #yorum tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        #yorum tr:hover {
            background-color: #ffae00;
            color: #fff;
        }

        #yorum th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #ffae00;
            color: white;
        }
</style>

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<br />
<h2 class="text-center"> YORUMLARIM </h2>
<div class="container">
    <table class="table table-bordered" id="yorum">
        <tr>
            <th>#</th>
            <th>Adı</th>
            <th>Soyadı</th>
            <th>Ünvan</th>
            <th>Mesaj</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.UserTitle</td>
                <td>@item.Content</td>
                <td><a href="/User/DeleteComment/@item.Id" class="btn btn-danger">Sil</a></td>
                <td><a href="/User/UpdateComment/@item.Id" class="btn btn-warning">Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/Default/Index/" class="btn btn-info" style="background-color:#ffae00">Ana Sayfa</a>
</div>


