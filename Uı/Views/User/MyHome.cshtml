@using Uı.Models.Home;
@model List<ResultHomeListViewModel>
@{
    Layout = null;
    int count = 0;
}
<style>
    #ilan {
        border-collapse: collapse;
        width: 100%;
    }

        #ilan td, #ilan th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        #ilan tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        #ilan tr:hover {
            background-color: #ffae00;
            color: #fff;
        }

        #ilan th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #ffae00;
            color: white;
        }
</style>

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<br />
<h2 class="text-center"> İLANLARIM </h2>
<div class="container" id="ilan">
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>İlan Başlığı</th>
            <th>Açıklama</th>
            <th>Fiyat</th>
            <th>Adres</th>
            <th>Kategori</th>
            <th>Durumu</th>
            <th>Resim</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.Price ₺</td>
                <td>@item.Adress</td>
                <td>@item.CategoryName</td>
                <td>@item.Status</td>
                <td><img src="@item.ImageUrl" width="250" /></td>
                <td><a href="/Home/DeleteHome/@item.Id" class="btn btn-danger">Sil</a></td>
                <td><a href="/User/UpdateHome/@item.Id" class="btn btn-warning">Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/Default/Index/" class="btn btn-info" style="background-color:#ffae00">Ana Sayfa</a>
</div>

